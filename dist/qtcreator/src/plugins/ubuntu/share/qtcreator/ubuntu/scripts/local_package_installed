set -e
EMULATOR_PACKAGE=$1

dpkg -l ${EMULATOR_PACKAGE} 2>&1 |egrep -v "no packages found matching"|  awk '{print $1 " " $2 " " $3}' | grep "ii" || echo "The package is not installed."
