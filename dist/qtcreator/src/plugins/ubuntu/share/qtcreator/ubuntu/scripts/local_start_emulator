SCRIPTPATH=`dirname $0`
EMULATOR=$1
MEMORY=$2
SCALE=$3

PID=$(${SCRIPTPATH}/local_emulator_pid ${EMULATOR})
if [ ! -z "${PID}" ]
then
  echo "Emulator already running with pid ${PID}"
  exit 1
fi

set -e
ubuntu-emulator run ${EMULATOR} --memory=${MEMORY} --scale=${SCALE} &
set +e
